<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
	    	xmlns:android="http://schemas.android.com/apk/res/android"
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:padding="5dp">
        <TextView android:id="@+id/playlistPathTextView" android:layout_width="wrap_content" android:text="@string/playlistPath" android:layout_height="wrap_content"></TextView>
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/playlistPathEditText">
            <requestFocus></requestFocus>
        </EditText>
        <TextView android:id="@+id/musicPathTextView" android:layout_width="wrap_content" android:text="@string/musicPath" android:layout_height="wrap_content"></TextView>
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/MuiscPathEditText"></EditText>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/confirmButton" android:text="@string/confirm" android:layout_gravity="center_horizontal"></Button>
     </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
	    	xmlns:android="http://schemas.android.com/apk/res/android"
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:padding="5dp">
	     <ImageView 
	        android:id="@+id/thumbnail"
	        android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    />
	     <TextView android:layout_height="wrap_content" android:text="TextView" android:layout_width="fill_parent" android:id="@+id/songName"></TextView>
	     <ImageButton android:layout_height="wrap_content" android:src="@drawable/icon" android:layout_width="wrap_content" android:id="@+id/shufflebutton"></ImageButton>
	     <android.webkit.WebView android:id="@+id/webView1" android:layout_width="fill_parent" android:layout_height="fill_parent"></android.webkit.WebView>
     </LinearLayout>
     